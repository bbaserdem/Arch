    'xorg-mkfontdir'
    'xorg-server'
    'xorg-server-common'
    'xorg-setxkbmap'
    'xorg-xcursorgen'
    'xorg-xdpyinfo'
    'xorg-xdriinfo'
    'xorg-xev'
    'xorg-xgamma'
    'xorg-xinput'
    'xorg-xkbcomp'
    'xorg-xkbutils'
    'xorg-xkill'
    'xorg-xmodmap'
    'xorg-xprop'
    'xorg-xrandr'
    'xorg-xrdb'
    'xorg-xrefresh'
    'xorg-xset'
    'xorg-xsetroot'
