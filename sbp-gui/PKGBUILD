pkgname=sbp-gui
pkgver=5.0
pkgrel=6
pkgdesc="SBP Meta Package: GUI packages"
arch=('any')
url="https://github.com/bbaserdem/Arch"
licence=(MIT)
validpgpkeys=('0B7151C823559DD8A7A04CE36426139E2F4C6CCE')
source=('gui.install')
sha256sums=(SKIP)
package() {
  depends=('sbp-base')
  install=gui.install
  #---Login manager
  depends+=('sddm')
  #---Input methods
  depends+=('ibus' 'ibus-m17n')
