# vim: ft=PKGBUILD
pkgname=sbp-themes
pkgver=4.0
pkgrel=2
pkgdesc="SBP Meta Package: Themeing"
arch=('any')
url="https://github.com/bbaserdem/Arch"
licence=(MIT)
validpgpkeys=('0B7151C823559DD8A7A04CE36426139E2F4C6CCE')
package() {
    #---Fonts
    depends=(
        'noto-fonts-emoji'              # Emoji fonts
        'ttf-nerd-fonts-symbols-mono'   # Glyphs
        'ttf-inconsolata'               # Font for status bar
        'ttf-liberation'                # Windows compatibility font
        'ttf-caladea'                   # Office fonts alternative
        'ttf-carlito'                   # Georgia alternative
        'ttf-croscore'                  # Helvetica, Times and courier alternative
        'otf-fira-code'                 # Ligature font (monospace)
        'ttf-droid'                     # Font for sans (sans-serif)
        'adobe-source-serif-pro-fonts'  # Font for serif (serif)
        )
    #---Icons
    depends+=(
        'papirus-icon-theme'
        'tela-icon-theme'
        'xcursor-comix'
        'breeze-hacked-cursor-theme')
        
    #---Login manager
    depends+=('chili-sddm-theme')
    #---GTK
    depends+=(
        'arc-gtk-theme'
        'layan-gtk-theme')
    #---QT
    depends+=(
        'kvantum-qt5'
        'kvantum-theme-arc'
        'kvantum-theme-layan')

}
