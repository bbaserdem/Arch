package() {
    install=hardware.install
    #---System info
    depends=(
        'dmidecode'
        'hdparm'
        'lshw'
        'stress'
        'powertop')
    #---Power management
    depends+=(
        'i2c-tools'
        'lm_sensors'
        'acpi'
        'acpid'
        'cpupower' )
    #---Input methods
    depends+=('libinput')
    #---RNG
    depends+=('rng-tools')
}
