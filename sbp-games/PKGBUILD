# vim: ft=PKGBUILD
pkgname=sbp-games
pkgver=4.0
pkgrel=2
pkgdesc="SBP Meta Package: Gaming"
arch=('any')
url="https://github.com/bbaserdem/Arch"
licence=(MIT)
validpgpkeys=('0B7151C823559DD8A7A04CE36426139E2F4C6CCE')
package() {
    depends=('lutris')
    # Steam
    depends+=(
        'steam-fonts' 'ttf-roboto'
        'steamos-compositor-plus'
        'sssm' 'air-for-steam'
        'steam'
        'steam-native-runtime')
    install -dm 0755 "${pkgdir}/opt"
    install -dm 0775 -g games -o 1000 "${pkgdir}/opt/steam"
    # Wine
    depends+=(
        'wine-staging'
        'wine-mono'
        'lib32-libxml2'
        'lib32-mpg123'
        'lib32-lcms2'
        'lib32-giflib'
        'lib32-libpng'
        'lib32-gnutls'
        'lib32-gst-plugins-base'
        'lib32-openal'
        'lib32-gst-plugins-good')
}
