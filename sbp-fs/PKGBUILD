        'jfsutils'
        'lvm2'
        'reiserfsprogs'
        'sshfs'
        'sysfsutils'
        'udftools'
        'xfsprogs')
    #---Related utilities
    depends+=(
        'inotify-tools'
        'nfs-utils'
        'parted'
        'snapper'
        'udisks2')
}
